// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "watch",
            "problemMatcher": {
                "fileLocation": "absolute",
                "applyTo": "closedDocuments",
                "pattern": [
					{
						"regexp": "\\[tsl\\] (ERROR|WARNING) in (.*)?\\((\\d+),(\\d+)\\)",
						"severity": 1,
						"file": 2,
						"line": 3,
						"column": 4
					},
					{
						"regexp": "\\s*TS\\d+:\\s*(.*)",
						"message": 1
					}
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Compilation (.*?)startingâ€¦",
                    "endsPattern": "compiled (.*?)successfully"
                }
            },
            "isBackground": true,
            "presentation": {
                "reveal": "silent"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "npm",
            "script": "compile",
            "presentation": {
                "reveal": "silent"
            }
        }
    ]
}